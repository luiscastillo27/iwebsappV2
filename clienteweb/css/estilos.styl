*
	margin 0px
	padding 0px
	box-sizing border-box
	font-size 16px
	font-family 'Gabriela', helvetica
	
/************************************************
	MOVIL
*************************************************/
body
	overflow-x hidden
body::-webkit-scrollbar 
	width 7px 
	background rgb(250,250,250)
.espacio-nosotros
	display block
	width 100%;
	padding 10px
body::-webkit-scrollbar-thumb 
	background rgba(65, 121, 247, 1)
	border-radius 10px
	border solid 1px #FAFAFA
.fa-bars,
.fa-close
	color #000
button {
	position: relative;
	border: none;
	outline: none;
	cursor: pointer;
	background: #89669b;
	color: #fff;
	padding: 18px 60px;
	border-radius: 2px;
	font-size: 22px;
}

.material {
	position: relative;
	color: #fff;
	margin: 20px auto;
	height: 400px;
	width: 500px;
	background: #f45673;
}

.ripple {
	overflow: hidden;
}

.ripple-effect {
	position: absolute;
	border-radius: 50%;
	width: 50px;
	height: 50px;
	background: #fff;
	animation: animacion-ripple 2s;
}

@keyframes animacion-ripple {
	from {
		opacity: 0.4;

		-webkit-transform: scale(1);
		-ms-transform: scale(1);
		-o-transform: scale(1);
		transform: scale(1);
	}

	to {
		opacity: 0;
		
		-webkit-transform: scale(100);
		-ms-transform: scale(100);
		-o-transform: scale(100);
		transform: scale(100);
	}
}	
