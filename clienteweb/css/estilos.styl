			background linear-gradient(top, #FAFAFA, #4179F7)
		.banner-detalles
			width 100%
			padding-top 20px
			position relative
			z-index 101
			color #fff
			h1,
			h2,
			p
				color #fff
				padding-top 5px
				font-size 15px
				text-align center
			h1,
			h2
				font-size 20px
			a 
				text-decoration none
				display block
				text-align center
				padding 10px
				margin 10px
				color #fff
