	/* INICIO FORMULARIO CENTRADO*/
	.form-center
		display block
		position relative
		width 200px
		margin 0px auto
		input,
		textarea
			display block
			width 100%
			padding 10px
			border none
			border-left solid 1px #757575
			border-right solid 1px #757575
			border-bottom solid 1px #757575
			outline none
		button
			display block
			background #4179F7
			position relative
			font-size 16px
			margin-top 20px
			width 100%
			border-radius 10px
		.radi-top
			border-radius 10px 10px 0px 0px
			border-top solid 1px #757575
		.radi-bottom
			border-radius 0px 0px 10px 10px
		textarea
			height 150px
		.espacio
			display block
			width 100%
			height 20px
			padding 5px
	/* FIN FORMULARIO CENTRADO*/
	/* INICIO TABS */
	.contenedor-tabs
		width 90%
		margin 0px auto
		.tabs
			width 100%
			background #363636
			list-style none
			display flex
			border-radius 10px 10px 0px 0px
			li
				width 18%
				a
					color #fff
					text-decoration none
					font-size 16px
					text-align center
					display block
					padding 20px 0px
				.tab-text
					display none
		.active
			background #4179F7
		.secciones
			border-radius 0px 0px 10px 10px
			width 100%
			background #FAFAFA
			color #000
			article
				padding 0px 30px 30px 30px
				img 
					display block
					width 55%
					min-width 27px
					float left
					margin-top 30px
					margin-right 10px
					border-radius 10px
				p
					text-align justify
					color #363636
					padding-top 30px
	/* FIN TABS*/
	/* INICIO PORTAFOLIO */
	.espacio-portafolio
		display block
		width 100%
		padding 10px
	.contenedor-portafolio
		display table
		height auto
		width 100%
		.cartas
			width 90%
			height 350px
			display block
			margin 20px auto
			perspective 700
			.carta
				width 100%
				height 100%
				position relative
				transition all 1s
				transform-style preserve-3d
				.lado
					width 100%
					height 100%
					backface-visibility hidden
					position absolute
					border-radius 10px
					&.enfrente
						background #FAFAFA
						.carta-bander
							display block
							width 100%
							height 100px
							position relative
							img 
								display block
								width 100%
								height 100%
								border-radius 10px 10px 0px 0px
						.carta-author
							display block
							width 70px
							height 70px
							position absolute
							margin-top -35px
							margin-left 37%
							img 
								display block
								width 100%
								height 100%
								border-radius 100%
								border solid 5px #FAFAFA
						.carta-body
							position relative
							margin-top 35px
							h2,
							p 
								color #000
								display block
								width 100%
								padding 5px
								margin-button 200px !important
								font-size 18px !important
							p 
								font-size 15px !important
						.carta-footer
							display block
							padding 10px
							position absolute
							bottom 0px
							width 100%
							background #FAFAFA
							border-radius 0px 0px 10px 10px
							border-top solid 1px #757575
					&.atras				
						background #FAFAFA        
						transform rotateY(180deg)
						.carta-body
							position relative 
							border-radius 10px 10px 0px 0px
							h2,
							p
								color #000
								display block
								width 100%
								padding 5px
								font-size 18px !important
							p
								font-size 15px !important
						.carta-estado
							margin-top 17px
							margin-bottom 10px !important
							.stats
								display block
								float left
								height 55px
								width 33.333333%
								text-align center
								h4 
									font-weight 300
									font-size 14px !important
									margin-bottom 5px
									color #000 !important
								p 
									color #777777
									font-size 12px !important
								&:first-child
									border-right 1px solid #777777
								&:last-child
									border-left 1px solid #777777
						.carta-footer
							position absolute
							clear both !important
							float none !important
							display block
							width 100%
							bottom 0px
							a 
								display block
								font-size 15px !important
								background #4179F7
								border-radius 10px !important
				&:hover
					transform rotateY(180deg)
